<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <item android:textStyle="bold"/>
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#538394" />
            <gradient android:angle="-90" android:startColor="#0099CC" android:endColor="#017DAB"  />
        </shape>
    </item>

    <!-- preset -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#072C54" />
            <gradient android:angle="-90" android:startColor="#94A2C3" android:endColor="#32639F"  />
        </shape>
    </item>
</selector>